<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="900.0" prefWidth="1600.0"
            styleClass="user-management-container"
            stylesheets="@../Styles/Common.css,@../Styles/UserManagement.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.Controllers.UserManagementController">
    <top>
        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20.0" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <!-- Back Button -->
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBack"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Retour"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Logo and Title -->
                <StackPane styleClass="logo-container">
                    <SVGPath
                            content="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M8,11A3,3 0 0,0 11,8A3,3 0 0,0 8,5A3,3 0 0,0 5,8A3,3 0 0,0 8,11M16,11A3,3 0 0,0 19,8A3,3 0 0,0 16,5A3,3 0 0,0 13,8A3,3 0 0,0 16,11Z"
                            fill="brown" scaleX="1.5" scaleY="1.5"/>
                </StackPane>
                <Label styleClass="header-label" text="GESTION DES UTILISATEURS"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Settings Button -->
                <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#handleSettings"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Paramètres"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <!-- Help Button -->
                <Button fx:id="helpBtn" mnemonicParsing="false" onAction="#handleHelp"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Aide"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M11,18H13V16H11V18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,6A4,4 0 0,0 8,10H10A2,2 0 0,1 12,8A2,2 0 0,1 14,10C14,12 11,11.75 11,15H13C13,12.75 16,12.5 16,10A4,4 0 0,0 12,6Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35" styleClass="content-split-pane">
            <items>
                <!-- Left Panel with Search and Table -->
                <VBox spacing="20.0" styleClass="user-table-container">
                    <children>
                        <!-- Search Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="searchField" promptText="Rechercher par nom ou email..."
                                           HBox.hgrow="ALWAYS" styleClass="search-box" onKeyReleased="#handleSearch"/>
                                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch"
                                        styleClass="icon-button">
                                    <tooltip>
                                        <Tooltip text="Rechercher"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                                fill="#ff0202"/>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                        <!-- User Table View - Include all original columns -->
                        <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                                <TableColumn fx:id="usernameColumn" prefWidth="120.0" text="Nom d'utilisateur"/>
                                <TableColumn fx:id="fullNameColumn" prefWidth="150.0" text="Nom complet"/>
                                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email"/>
                                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Téléphone"/>
                                <TableColumn fx:id="roleColumn" prefWidth="110.0" text="Rôle"/>
                                <TableColumn fx:id="activeColumn" prefWidth="100.0" text="Actif"/>
                                <TableColumn fx:id="lastLoginColumn" prefWidth="180.0" text="Dernière connexion"/>
                            </columns>
                            <placeholder>
                                <Label text="Aucun utilisateur trouvé"/>
                            </placeholder>
                        </TableView>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#handleAddUser"
                                        styleClass="button, button-success" text="Ajouter">
                                    <tooltip>
                                        <Tooltip text="Ajouter un nouvel utilisateur"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath content="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                 fill="white"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#handleEditUser"
                                        styleClass="button, button-warning" text="Modifier">
                                    <tooltip>
                                        <Tooltip text="Modifier l'utilisateur sélectionné"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                fill="white"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#handleDeleteUser"
                                        styleClass="button, button-danger" text="Supprimer">
                                    <tooltip>
                                        <Tooltip text="Supprimer l'utilisateur sélectionné"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                fill="white"/>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>

                <!-- Right Panel with User Form -->
                <ScrollPane fitToWidth="true" styleClass="form-scroll-pane">
                    <content>
                        <VBox spacing="20.0" styleClass="user-form">
                            <children>
                                <!-- User Header -->
                                <HBox alignment="CENTER_LEFT" spacing="20" styleClass="user-header">
                                    <!-- User Icon -->
                                    <StackPane styleClass="user-icon-container">
                                        <SVGPath
                                                content="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                                fill="#1e40af" scaleX="2.0" scaleY="2.0"/>
                                    </StackPane>

                                    <!-- User Information -->
                                    <VBox spacing="8">
                                        <Label fx:id="userFormTitleLabel" styleClass="section-label" text="Informations Utilisateur"/>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <!-- Status indicator -->
                                            <StackPane fx:id="userStatusIndicator" styleClass="status-indicator">
                                                <padding>
                                                    <Insets right="5"/>
                                                </padding>
                                            </StackPane>
                                            <!-- Status label -->
                                            <Label fx:id="userStatusLabel" text="Nouvel utilisateur"/>
                                        </HBox>
                                    </VBox>
                                </HBox>

                                <!-- Personal Information Section -->
                                <TitledPane animated="true" text="Informations d'identification" expanded="true">
                                    <content>
                                        <GridPane hgap="30.0" vgap="20.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0"
                                                                   prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Nom d'utilisateur:" styleClass="form-label"/>
                                                <TextField fx:id="usernameField" GridPane.columnIndex="1" styleClass="form-field"/>
                                                <Label fx:id="usernameErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                                <Label text="Nom complet:" GridPane.rowIndex="2" styleClass="form-label"/>
                                                <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>
                                                <Label fx:id="fullNameErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                                <Label text="Mot de passe:" GridPane.rowIndex="4" styleClass="form-label"/>
                                                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="form-field"/>
                                                <Label fx:id="passwordErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                                                <Label text="Confirmer mot de passe:" GridPane.rowIndex="6" styleClass="form-label"/>
                                                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="form-field"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </GridPane>
                                    </content>
                                </TitledPane>

                                <!-- Contact Information Section -->
                                <TitledPane animated="true" text="Informations de contact" expanded="true">
                                    <content>
                                        <GridPane hgap="30.0" vgap="20.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0"
                                                                   prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Email:" styleClass="form-label"/>
                                                <TextField fx:id="emailField" GridPane.columnIndex="1" styleClass="form-field"/>
                                                <Label fx:id="emailErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                                <Label text="Téléphone:" GridPane.rowIndex="2" styleClass="form-label"/>
                                                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>
                                                <Label fx:id="phoneErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </GridPane>
                                    </content>
                                </TitledPane>

                                <!-- Role and Status Section -->
                                <TitledPane animated="true" text="Rôle de l'Utilisateur" expanded="true">
                                    <content>
                                        <GridPane hgap="30.0" vgap="20.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0"
                                                                   prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Rôle:" styleClass="form-label"/>
                                                <ComboBox fx:id="roleComboBox" prefWidth="200.0" GridPane.columnIndex="1" styleClass="form-combo-box"/>

                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </GridPane>
                                    </content>
                                </TitledPane>

                                <!-- Action Buttons -->
                                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                    <children>
                                        <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel"
                                                styleClass="button, button-secondary" text="Annuler">
                                            <tooltip>
                                                <Tooltip text="Annuler les modifications"/>
                                            </tooltip>
                                            <graphic>
                                                <SVGPath
                                                        content="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                        fill="white"/>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#handleSaveUser"
                                                styleClass="button" text="Enregistrer">
                                            <tooltip>
                                                <Tooltip text="Enregistrer les informations de l'utilisateur"/>
                                            </tooltip>
                                            <graphic>
                                                <SVGPath
                                                        content="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"
                                                        fill="white"/>
                                            </graphic>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets top="15.0"/>
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>

