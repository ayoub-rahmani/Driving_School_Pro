                                                <TextField fx:id="diplomesField" GridPane.columnIndex="1"
                                                           GridPane.rowIndex="1"/>

                                                <Label text="Notes:" GridPane.rowIndex="2"/>
                                                <TextArea fx:id="notesField" wrapText="true" GridPane.columnIndex="1"
                                                          GridPane.rowIndex="2"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </GridPane>
                                    </content>
                                </TitledPane>

                                <!-- Action Buttons -->
                                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                    <children>
                                        <Button fx:id="annulerBtn" mnemonicParsing="false" onAction="#handleAnnuler"
