                                                      GridPane.rowIndex="3">
                                                    <TextField fx:id="salaireField" styleClass="salary-field form-field"/>
                                                    <Label text="DT" styleClass="form-label"/>
                                                </HBox>

                                                <Label text="Date de fin contrat:" GridPane.columnIndex="2"
                                                       GridPane.rowIndex="3" styleClass="form-label"/>
                                                <DatePicker fx:id="dateFinContratPicker" GridPane.columnIndex="3"
