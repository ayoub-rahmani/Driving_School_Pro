<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="900.0" prefWidth="1600.0"
            styleClass="seance-container"
            stylesheets="@../Styles/Common.css,@../Styles/Seance.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.Controllers.SeanceController">
    <!-- Header section -->
    <top>
        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20.0" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <!-- Back Button -->
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBack"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Retour"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Logo and Title -->
                <StackPane styleClass="logo-container">
                    <SVGPath
                            content="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z"
                            fill="brown" scaleX="1.5" scaleY="1.5"/>
                </StackPane>
                <Label styleClass="header-label" text="GESTION DES SÉANCES"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Dashboard Button -->
                <Button fx:id="dashboardBtn" mnemonicParsing="false" onAction="#toggleDashboard"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Tableau de bord"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M3,11H11V3H3M3,21H11V13H3M13,21H21V13H13M13,3V11H21V3"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <!-- Settings Button -->
                <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#handleSettings"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Paramètres"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <!-- Help Button -->
                <Button fx:id="helpBtn" mnemonicParsing="false" onAction="#handleHelp"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Aide"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M11,18H13V16H11V18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,6A4,4 0 0,0 8,10H10A2,2 0 0,1 12,8A2,2 0 0,1 14,10C14,12 11,11.75 11,15H13C13,12.75 16,12.5 16,10A4,4 0 0,0 12,6Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
        </HBox>
    </top>

    <left>
        <!-- Left Panel with Search, Table, and Actions -->
        <ScrollPane styleClass="left-panel-scroll" fitToWidth="true">
            <content>
                <VBox prefWidth="400.0" spacing="20.0" styleClass="seance-table-container, left-panel-content"
                      BorderPane.alignment="CENTER">
                    <children>
                        <!-- Search Bar (Taking Full Width) -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="rechercheField" promptText="Tapez un candidat, moniteur, date..."
                                           HBox.hgrow="ALWAYS" styleClass="search-box" onKeyReleased="#handleRecherche"/>
                                <Button fx:id="rechercheBtn" mnemonicParsing="false" onAction="#handleRecherche"
                                        styleClass="icon-button">
                                    <tooltip>
                                        <Tooltip text="Rechercher"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                                fill="#3498db"/>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Seance Table View -->
                        <TableView fx:id="seanceTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                                <TableColumn fx:id="typeSeanceColumn" prefWidth="80.0" text="Type"/>
                                <TableColumn fx:id="typePermisColumn" prefWidth="80.0" text="Permis"/>

                                <TableColumn fx:id="candidatNameColumn" prefWidth="150.0" text="Candidat"/>
                                <TableColumn fx:id="dateDebutColumn" prefWidth="120.0" text="Date et heure"/>
                                <TableColumn fx:id="moniteurNameColumn" prefWidth="150.0" text="Moniteur"/>
                                <TableColumn fx:id="vehiculeInfoColumn" prefWidth="170.0" text="Véhicule"/>
                                <TableColumn fx:id="adresseColumn" prefWidth="250.0" text="Adresse"/>
                            </columns>
                            <placeholder>
                                <Label text="Aucune séance trouvée"/>
                            </placeholder>
                        </TableView>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="ajouterBtn" mnemonicParsing="false" onAction="#handleAjouter"
                                        styleClass="button, button-success" text="Ajouter">
                                    <tooltip>
                                        <Tooltip text="Ajouter une nouvelle séance"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath content="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                 fill="white"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="modifierBtn" mnemonicParsing="false" onAction="#handleModifier"
                                        styleClass="button, button-warning" text="Modifier">
                                    <tooltip>
                                        <Tooltip text="Modifier la séance sélectionnée"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                fill="white"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="supprimerBtn" mnemonicParsing="false" onAction="#handleSupprimer"
                                        styleClass="button, button-danger" text="Supprimer">
                                    <tooltip>
                                        <Tooltip text="Supprimer la séance sélectionnée"/>
                                    </tooltip>
                                    <graphic>
                                        <SVGPath
                                                content="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                fill="white"/>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Filters TitledPane -->
                        <TitledPane animated="true" text="Filtres" expanded="false">
                            <content>
                                <VBox spacing="15" styleClass="filter-section">
                                    <children>
                                        <!-- Type Seance Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Type de séance:" styleClass="filter-label"/>
                                                <ComboBox fx:id="filterTypeSeanceComboBox" prefWidth="150.0"
                                                          promptText="Tous les types"/>
                                            </children>
                                        </HBox>

                                        <!-- Type Permis Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Type de permis:" styleClass="filter-label"/>
                                                <ComboBox fx:id="filterTypePermisComboBox" prefWidth="150.0"
                                                          promptText="Tous les types"/>
                                            </children>
                                        </HBox>

                                        <!-- Date Range Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Période:" styleClass="filter-label"/>
                                                <DatePicker fx:id="filterStartDatePicker" promptText="Début"/>
                                                <Label text="à"/>
                                                <DatePicker fx:id="filterEndDatePicker" promptText="Fin"/>
                                            </children>
                                        </HBox>

                                        <!-- Candidat Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Candidat:" styleClass="filter-label"/>
                                                <ComboBox fx:id="filterCandidatComboBox" prefWidth="200.0"
                                                          promptText="Tous les candidats"/>
                                            </children>
                                        </HBox>

                                        <!-- Moniteur Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Moniteur:" styleClass="filter-label"/>
                                                <ComboBox fx:id="filterMoniteurComboBox" prefWidth="200.0"
                                                          promptText="Tous les moniteurs"/>
                                            </children>
                                        </HBox>

                                        <!-- Vehicule Filter -->
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Véhicule:" styleClass="filter-label"/>
                                                <ComboBox fx:id="filterVehiculeComboBox" prefWidth="200.0"
                                                          promptText="Tous les véhicules"/>
                                            </children>
                                        </HBox>

                                        <!-- Apply and Reset Buttons -->
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button fx:id="resetFilterBtn" mnemonicParsing="false"
                                                        onAction="#handleResetFilter"
                                                        styleClass="button-secondary" text="Réinitialiser">
                                                    <tooltip>
                                                        <Tooltip text="Réinitialiser tous les filtres"/>
                                                    </tooltip>
                                                    <graphic>
                                                        <SVGPath
                                                                content="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                                                fill="white"/>
                                                    </graphic>
                                                </Button>
                                                <Button fx:id="applyFilterBtn" mnemonicParsing="false"
                                                        onAction="#handleApplyFilter"
                                                        styleClass="button" text="Appliquer">
                                                    <tooltip>
                                                        <Tooltip text="Appliquer les filtres sélectionnés"/>
                                                    </tooltip>
                                                    <graphic>
                                                        <SVGPath
                                                                content="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                                                fill="white"/>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </content>
                        </TitledPane>

                        <Button fx:id="exportBtn" mnemonicParsing="false"
                                styleClass="button" text="Exporter les données" maxWidth="Infinity" onAction="#handleExport">
                            <tooltip>
                                <Tooltip text="Exporter les données des séances"/>
                            </tooltip>
                            <graphic>
                                <SVGPath
                                        content="M23,12L19,8V11H10V13H19V16M1,18V6C1,4.89 1.9,4 3,4H15A2,2 0 0,1 17,6V9H15V6H3V18H15V15H17V18A2,2 0 0,1 15,20H3A2,2 0 0,1 1,18Z"
                                        fill="white"/>
                            </graphic>
                        </Button>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <center>
        <!-- Central Content Area: Seance Form and Dashboard -->
        <StackPane>
            <children>
                <!-- Form ScrollPane -->
                <ScrollPane fx:id="formScrollPane" fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER"
                            styleClass="content-background">
                    <content>
                        <VBox spacing="20.0" styleClass="seance-form">
                            <children>
                                <!-- Seance Header -->
                                <HBox alignment="CENTER_LEFT" spacing="20" styleClass="seance-header">
                                    <!-- Seance Icon -->
                                    <ImageView fx:id="SeanceIcon" fitHeight="120.0" fitWidth="120.0"
                                               pickOnBounds="true" preserveRatio="true" styleClass="photo-placeholder">
                                        <image>
                                            <Image url="@../images/Seance.jpg"/>
                                        </image>
                                    </ImageView>

                                    <!-- Seance Information -->
                                    <VBox spacing="8">
                                        <Label styleClass="section-label" text="Gestion des Séances"/>
                                        <Label styleClass="section-description" text="Planifiez et gérez les séances de code et de conduite"/>
                                    </VBox>
                                </HBox>

                                <!-- Basic Information Section -->
                                <TitledPane animated="true" text="Informations de la séance" expanded="true">
                                    <content>
                                        <GridPane hgap="30.0" vgap="20.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0"
                                                                   prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0"
                                                                   prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Type Séance:" styleClass="form-label"/>
                                                <ComboBox fx:id="typeSeanceComboBox" GridPane.columnIndex="1" styleClass="form-field"/>

                                                <Label text="Type Permis:" GridPane.columnIndex="2" styleClass="form-label"/>
                                                <ComboBox fx:id="typePermisComboBox" GridPane.columnIndex="3" styleClass="form-field"/>

                                                <Label text="Date:" GridPane.rowIndex="1" styleClass="form-label"/>
                                                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                                            styleClass="form-field"/>

                                                <Label text="Heure:" GridPane.columnIndex="2"
                                                       GridPane.rowIndex="1" styleClass="form-label"/>
                                                <ComboBox fx:id="heureComboBox" GridPane.columnIndex="3"
                                                          GridPane.rowIndex="1" styleClass="form-field"/>

                                                <Label text="Candidat:" GridPane.rowIndex="2" styleClass="form-label"/>
                                                <ComboBox fx:id="candidatComboBox" GridPane.columnIndex="1"
                                                          GridPane.rowIndex="2" styleClass="form-field"/>

                                                <Label text="Moniteur:" GridPane.columnIndex="2"
                                                       GridPane.rowIndex="2" styleClass="form-label"/>
                                                <ComboBox fx:id="moniteurComboBox" GridPane.columnIndex="3"
                                                          GridPane.rowIndex="2" styleClass="form-field"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </GridPane>
                                    </content>
                                </TitledPane>

                                <!-- Vehicule Section (for driving lessons) -->
                                <TitledPane animated="true" text="Véhicule et lieu de rendez-vous" expanded="true">
                                    <content>
                                        <VBox spacing="20">
                                            <HBox spacing="30">
                                                <Label text="Véhicule:" styleClass="form-label" prefWidth="150"/>
                                                <ComboBox fx:id="vehiculeComboBox" styleClass="form-field" prefWidth="350"/>
                                            </HBox>

                                            <HBox spacing="30">
                                                <Label text="Adresse:" styleClass="form-label" prefWidth="150"/>
                                                <TextField fx:id="adresseField" styleClass="form-field" prefWidth="350"/>
                                            </HBox>

                                            <!-- Location Selection -->
                                            <VBox spacing="15">

                                                <HBox spacing="15">
                                                    <Button fx:id="chooseLocationBtn" text="Choisir un lieu de rendez-vous"
                                                            styleClass="location-button"  mnemonicParsing="false"  onAction="#openMapDialog">
                                                        <graphic>
                                                            <SVGPath content="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z"
                                                                     fill="#3498db"/>
                                                        </graphic>
                                                    </Button>

                                                    <Button fx:id="changeLocationBtn" text="Changer le lieu"
                                                            styleClass="location-button" onAction="#openMapDialog">
                                                        <graphic>
                                                            <SVGPath content="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M3.05,13H1V11H3.05C3.5,6.83 6.83,3.5 11,3.05V1H13V3.05C17.17,3.5 20.5,6.83 20.95,11H23V13H20.95C20.5,17.17 17.17,20.5 13,20.95V23H11V20.95C6.83,20.5 3.5,17.17 3.05,13M12,5A7,7 0 0,0 5,12A7,7 0 0,0 12,19A7,7 0 0,0 19,12A7,7 0 0,0 12,5Z"
                                                                     fill="#3498db"/>
                                                        </graphic>
                                                    </Button>
                                                </HBox>

                                                <HBox spacing="10">
                                                    <VBox spacing="5" prefWidth="200">
                                                        <Label text="Coordonnées:" styleClass="form-label"/>
                                                        <HBox spacing="10">
                                                            <Label text="Latitude:" styleClass="form-sublabel"/>
                                                            <Label fx:id="latitudeLabel" styleClass="coord-value" text="0.000000"/>
                                                        </HBox>
                                                        <HBox spacing="10">
                                                            <Label text="Longitude:" styleClass="form-sublabel"/>
                                                            <Label fx:id="longitudeLabel" styleClass="coord-value" text="0.000000"/>
                                                        </HBox>
                                                    </VBox>
                                                </HBox>
                                            </VBox>

                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Action Buttons -->
                                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                    <children>
                                        <Button fx:id="annulerBtn" mnemonicParsing="false" onAction="#handleAnnuler"
                                                styleClass="button, button-secondary" text="Annuler">
                                            <tooltip>
                                                <Tooltip text="Annuler les modifications"/>
                                            </tooltip>
                                            <graphic>
                                                <SVGPath
                                                        content="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                        fill="white"/>
                                            </graphic>
                                        </Button>
                                        <Button mnemonicParsing="false"
                                                styleClass="button, button-info" text="Générer automatiquement" onAction="#handleGenererSeance">
                                            <tooltip>
                                                <Tooltip text="Générer une séance automatiquement avec un moniteur et véhicule disponible"/>
                                            </tooltip>
                                            <graphic>
                                                <SVGPath
                                                        content="M17,13H13V17H11V13H7V11H11V7H13V11H17M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                                                        fill="white"/>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="enregistrerBtn" mnemonicParsing="false" onAction="#handleEnregistrer"
                                                styleClass="button" text="Enregistrer">
                                            <tooltip>
                                                <Tooltip text="Enregistrer les informations de la séance"/>
                                            </tooltip>
