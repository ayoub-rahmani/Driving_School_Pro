<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="800.0" prefWidth="1400.0"
            styleClass="logs-container"
            stylesheets="@../Styles/Common.css,@../Styles/Logs.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.Controllers.LogsController">
    <top>
        <!-- Header Section - Matching the style from MainController -->
        <HBox alignment="CENTER" spacing="20.0" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <!-- Back Button -->
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBack"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Retour"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Logo and Title -->


                <SVGPath
                        content="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V16H6V18H15M18,14V12H6V14H18Z" fill="#1e40af" scaleX="1.5" scaleY="1.5"/>
                <Label styleClass="header-label" text="LOGS D'ACTIVITÉ"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Settings Button -->
                <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#handleSettings"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Paramètres"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>

                <!-- Help Button -->
                <Button fx:id="helpBtn" mnemonicParsing="false" onAction="#handleHelp"
                        styleClass="icon-button">
                    <tooltip>
                        <Tooltip text="Aide"/>
                    </tooltip>
                    <graphic>
                        <SVGPath content="M11,18H13V16H11V18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,6A4,4 0 0,0 8,10H10A2,2 0 0,1 12,8A2,2 0 0,1 14,10C14,12 11,11.75 11,15H13C13,12.75 16,12.5 16,10A4,4 0 0,0 12,6Z"
                                 fill="white" scaleX="1.2" scaleY="1.2"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
        </HBox>
    </top>

    <left>
        <!-- Left Panel with Logs Table -->
        <VBox prefWidth="700.0" spacing="20.0" styleClass="logs-table-container, left-panel-content"
              BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <TextField fx:id="searchField" promptText="Rechercher dans les logs..."
                               HBox.hgrow="ALWAYS" styleClass="search-box" onKeyReleased="#handleSearch"/>
                    <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch"
                            styleClass="icon-button">
                        <tooltip>
                            <Tooltip text="Rechercher"/>
                        </tooltip>
                        <graphic>
                            <SVGPath
                                    content="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                    fill="#ff0202"/>
                        </graphic>
                    </Button>
                </children>
            </HBox>

            <!-- Logs Table View - Now takes all available space -->
            <TableView fx:id="logsTable" VBox.vgrow="ALWAYS" styleClass="logs-table">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID"/>
                    <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action"/>
                    <TableColumn fx:id="entityTypeColumn" prefWidth="120.0" text="Type d'entité"/>
                    <TableColumn fx:id="entityIdColumn" prefWidth="110.0" text="ID d'entité"/>
                    <TableColumn fx:id="detailsColumn" prefWidth="400.0" text="Détails"/>
                    <TableColumn fx:id="userIdColumn" prefWidth="80.0" text="ID Utilisateur"/>
                    <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Nom d'utilisateur"/>
                    <TableColumn fx:id="timestampColumn" prefWidth="200.0" text="Horodatage"/>
                </columns>
                <placeholder>
                    <Label text="Aucun log trouvé"/>
                </placeholder>
            </TableView>
            <HBox styleClass="bottom-button-container" alignment="CENTER" spacing="15.0">
                <Button fx:id="exportBtn" mnemonicParsing="false" onAction="#handleExport"
                        styleClass="button" text="Exporter">
                    <graphic>
                        <SVGPath content="M23,12L19,8V11H10V13H19V16M1,18V6C1,4.89 1.9,4 3,4H15A2,2 0 0,1 17,6V9H15V6H3V18H15V15H17V18A2,2 0 0,1 15,20H3A2,2 0 0,1 1,18Z"
                                 fill="white" scaleX="1.0" scaleY="1.0"/>
                    </graphic>
                </Button>

                <Button fx:id="deleteLogBtn" mnemonicParsing="false" onAction="#handleDeleteLog"
                        styleClass="button, button-danger" text="Supprimer">
                    <graphic>
                        <SVGPath content="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                 fill="white" scaleX="1.0" scaleY="1.0"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

    </left>

    <center>
        <!-- Right Panel with Filters and Statistics -->
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER"
                    styleClass="content-background">
            <content>
                <VBox spacing="20.0" styleClass="logs-form">
                    <padding>
                        <Insets bottom="30.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>

                    <!-- Filter Section -->
                    <VBox spacing="15.0" styleClass="filter-container">
                        <Label text="Filtres" styleClass="section-label"/>
                        <VBox spacing="15.0" styleClass="stats-detail-card">
                            <GridPane hgap="15.0" vgap="30.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                                    <RowConstraints minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                                </rowConstraints>
                                <children>
                                    <Label text="Type d'entité:" styleClass="filter-label"/>
                                    <ComboBox fx:id="filterTypeComboBox" prefWidth="250.0" GridPane.columnIndex="1" styleClass="filter-combo"/>

                                    <Label text="Action:" styleClass="filter-label" GridPane.rowIndex="1"/>
                                    <ComboBox fx:id="filterActionComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="filter-combo"/>

                                    <Label text="Utilisateur:" styleClass="filter-label" GridPane.rowIndex="2"/>
                                    <ComboBox fx:id="filterUserComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="filter-combo"/>

                                    <Label text="Période:" styleClass="filter-label" GridPane.rowIndex="3" GridPane.valignment="TOP">
                                        <GridPane.margin>
                                            <Insets top="10.0" />
                                        </GridPane.margin>
                                    </Label>
                                    <VBox spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                                            <Label text="Du:" styleClass="filter-label" minWidth="40"/>
                                            <DatePicker fx:id="fromDatePicker" promptText="Date début" styleClass="filter-date" prefWidth="200"/>
                                        </HBox>
                                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                                            <Label text="Au:" styleClass="filter-label" minWidth="40"/>
                                            <DatePicker fx:id="toDatePicker" promptText="Date fin" styleClass="filter-date" prefWidth="200"/>
                                        </HBox>
                                    </VBox>
                                </children>
                                <padding>
                                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                                </padding>
                            </GridPane>


                            <!-- Improved button layout with more spacing -->
                            <HBox spacing="30.0" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                                <Button fx:id="resetFilterBtn" mnemonicParsing="false" onAction="#handleResetFilter"
                                        styleClass="button, button-secondary" text="Réinitialiser" prefWidth="150">
                                    <graphic>
                                        <SVGPath content="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                                 fill="white"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="applyFilterBtn" mnemonicParsing="false" onAction="#handleApplyFilter"
                                        styleClass="button" text="Appliquer" prefWidth="150">
                                    <graphic>
                                        <SVGPath content="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                                 fill="white"/>
                                    </graphic>
                                </Button>
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Simplified Statistics Section -->
                    <VBox spacing="25.0" styleClass="stats-container">
                        <Label text="Statistiques des logs" styleClass="section-label"/>

                        <!-- Summary Cards -->
                        <HBox spacing="25.0" alignment="CENTER">
                            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" minHeight="120">
                                <StackPane styleClass="stat-icon-container">
                                    <SVGPath content="M16,15H9V13H16V15M19,11H9V9H19V11M19,7H9V5H19V7M3,5V21H19V23H3A2,2 0 0,1 1,21V5H3M21,1A2,2 0 0,1 23,3V17C23,18.11 22.11,19 21,19H7A2,2 0 0,1 5,17V3C5,1.89 5.89,1 7,1H21M7,3V17H21V3H7Z"
                                             fill="#1e40af" scaleX="1.2" scaleY="1.2"/>
                                </StackPane>
                                <Label text="Total des logs" styleClass="stat-title"/>
                                <Label fx:id="totalLogsLabel" text="0" styleClass="stat-value"/>
                            </VBox>

                            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" minHeight="120">
                                <StackPane styleClass="stat-icon-container">
                                    <SVGPath content="M7,10H12V15H7M19,19H5V8H19M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3Z"
                                             fill="#10b981" scaleX="1.2" scaleY="1.2"/>
                                </StackPane>
                                <Label text="Logs aujourd'hui" styleClass="stat-title"/>
                                <Label fx:id="todayLogsLabel" text="0" styleClass="stat-value"/>
                            </VBox>

                            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" minHeight="120">
                                <StackPane styleClass="stat-icon-container">
                                    <SVGPath content="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                             fill="#f59e0b" scaleX="1.2" scaleY="1.2"/>
                                </StackPane>
                                <Label text="Utilisateurs actifs" styleClass="stat-title"/>
                                <Label fx:id="activeUsersLabel" text="0" styleClass="stat-value"/>
                            </VBox>
                        </HBox>

                        <!-- Recent Activity Only -->
                        <VBox spacing="15.0" styleClass="stats-detail-card">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                            </padding>
                            <Label text="Activité récente" styleClass="stats-detail-title"/>
                            <VBox fx:id="recentActivityContainer" spacing="12.0" styleClass="stats-detail-content"/>
                        </VBox>

                        <!-- Refresh Button -->
                        <HBox alignment="CENTER_RIGHT">
                            <padding>
                                <Insets top="10.0"/>
                            </padding>
                            <Button fx:id="refreshStatsBtn" mnemonicParsing="false" onAction="#refreshStatistics"
                                    styleClass="button" text="Actualiser les statistiques">
                                <graphic>
                                    <SVGPath content="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                             fill="white"/>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
